{
  "name": "luffy",
  "version": "1.0.0",
  "description": "Self-hosted & automatic anime web platform for seasonals",
  "type": "module",
  "targets": {
    "frontend": {
      "source": "app/index.html",
      "context": "browser"
    },
    "backend": {
      "source": "api/index.coffee",
      "context": "node",
      "outputFormat": "esmodule"
    }
  },
  "scripts": {
    "frontend": "parcel serve --target frontend",
    "backend": "parcel build --target backend && node ./dist/backend/index.js",
    "bundle": "run-p frontend backend",
    "build": "parcel build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@catppuccin/tailwindcss": "^0.1.6",
    "@parcel/transformer-coffeescript": "^2.10.3",
    "autoprefixer": "^10.4.16",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.10.3",
    "postcss": "^8.4.32",
    "process": "^0.11.10",
    "tailwindcss": "^3.4.0"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "puppeteer": "^21.6.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
